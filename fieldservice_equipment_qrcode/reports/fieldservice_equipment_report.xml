<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record
        id="paperformat_fieldservice_calibration_certificate"
        model="report.paperformat"
    >
        <field name="name">Fieldservice Calibration Certificate format</field>
        <field name="default" eval="True" />
        <field name="format">custom</field>
        <field name="page_height">40</field>
        <field name="page_width">60</field>
        <field name="orientation">Portrait</field>
        <field name="margin_top">2</field>
        <field name="margin_bottom">2</field>
        <field name="margin_left">2</field>
        <field name="margin_right">2</field>
        <field name="header_line" eval="False" />
        <field name="header_spacing">0</field>
        <field name="dpi">80</field>
    </record>
    <record id="action_report_fieldservice_equipment_qrcode" model="ir.actions.report">
        <field name="name">Calibration Certificate (PDF)</field>
        <field name="model">fsm.equipment</field>
        <field name="report_type">qweb-pdf</field>
        <field
            name="report_name"
        >fieldservice_equipment_qrcode.report_calibration_certificate</field>
        <field
            name="report_file"
        >fieldservice_equipment_qrcode.report_calibration_certificate</field>
        <field
            name="paperformat_id"
            ref="fieldservice_equipment_qrcode.paperformat_fieldservice_calibration_certificate"
        />
        <field
            name="print_report_name"
        >'Calibration Certificate - %s' % (object.lot_id.name)</field>
        <field name="binding_model_id" ref="model_fsm_equipment" />
        <field name="binding_type">report</field>
    </record>
