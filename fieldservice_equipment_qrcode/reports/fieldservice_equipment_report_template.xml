<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <template id="report_calibration_certificate">
            <t t-call="web.html_container">
                <style>
                <!-- .page{
                    width:60mm;
                    height:40mm;
                    border: 1px solid red;
                } -->
                    .page p{
                        margin-bottom:0;
                        font-size:2mm;
                    }
                    .col-left{
                        width: 50%;
                        float: left;
                    }
                    .col-right{
                        width: 50%;
                        float:right;
                        text-align:center;
                    }
                    .logo-company{
                        height:13mm;
                        margin-bottom: 1mm;
                    }
                    .qrcode{
                        height: 22mm;
                        margin-top: 1mm;
                        margin-bottom: -2mm;
                    }
                    h1{
                        font-size:3mm;
                        font-weight: bold;
                        margin-bottom:4mm;
                    }
                </style>
                <t t-foreach="docs" t-as="o">
                    <div class="page">
                        <div class="col-left">
                            <h1>ENGENHARIA CLÍNICA</h1>
                            <!-- <h1>CERTIFICADO CALIBRAÇÃO</h1> -->
                            <p><b>RESPONSAVEL: ______________________</b></p>
                            <p><b>NUMERO DE SERIE:</b> <t t-esc="o.lot_id.name" /></p>
                            <p><b><t t-esc="o.name.split(' - ')[0]" /></b></p>
                        </div>
                        <div class="col-right">
                            <img
                            t-att-src="image_data_uri(o.company_id.labels_logo)"
                            class="logo-company"
                        />
                            <img t-att-src="image_data_uri(o.qrcode)" class="qrcode" />
                        </div>
                        <div
                        style="display:block; clear:both; page-break-after:avoid;"
                    />
                    </div>
                </t>
            </t>
    </template>
</odoo>
